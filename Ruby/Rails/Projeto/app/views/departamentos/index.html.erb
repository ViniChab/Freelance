<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td class="LinhaTabelaDepartamentos"><%= link_to 'Ver Produtos', "#{produtos_departamentos_path}/#{departamento.id}", class: "btn btn-default" %></td>
        <td class="LinhaTabelaDepartamentos"><%= link_to 'Editar', edit_departamento_path(departamento), class: "btn btn-default" %></td>
        <td class="LinhaTabelaDepartamentos"><%= link_to 'Apagar', departamento, method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_departamento_path, class:"btn btn-primary" %>
